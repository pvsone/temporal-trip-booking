# Justfile for Temporal Trip Booking .NET project

# Default recipe - show available recipes
default:
    @just --list

# Build the project
build:
    @echo "Building temporal-trip-booking..."
    dotnet build

# Run the worker
run:
    @echo "Running temporal-trip-booking worker..."
    dotnet run --project src/TripBooking.csproj

# Run tests
test:
    @echo "Running tests..."
    dotnet test

# Clean build artifacts
clean:
    @echo "Cleaning build artifacts..."
    dotnet clean

# Restore dependencies
restore:
    dotnet restore
